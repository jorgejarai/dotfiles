#!/usr/bin/env bash

# Use GNU ls instead of the BSD version on macOS
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias ls='gls -h --color=always'
else
    alias ls='ls -h --color=always'
fi

alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

alias bc='bc -l -q ~/.config/bcrc'
alias cd..='cd ..'
alias update-ydl='sudo pip3 install --upgrade youtube-dl'
alias hd='hexdump -C'

alias ncal='ncal -s ES -b'
alias epoch='date +%s'
alias iso8601='date -Iseconds'

alias dmenu='dmenu -b -fn "mono-10"'

alias scrsize='printf "%sx%s\n" $COLUMNS $LINES'

alias mp3dload='youtube-dl -x --audio-format mp3'
alias oggdload='youtube-dl -x --audio-format vorbis'
alias destreamer='$HOME/Sources/destreamer/destreamer.sh -o /tmp/'

alias ydl='youtube-dl'

alias nethackx11='NETHACKOPTIONS="windowtype:x11" nethack'
alias nethackcurses='NETHACKOPTIONS="windowtype:curses" nethack'

alias bootvm='VBoxManage startvm "Ubuntu" --type headless'
alias shutdownvm='ssh vm shutdown now'

alias cleanheads='ssh srv /home/jorge/.local/bin/cleanheads'
alias nozzlecheck='ssh srv /home/jorge/.local/bin/nozzlecheck'

alias direwolf='direwolf -c $HOME/.direwolf.conf'

# vim: set syntax=sh:
